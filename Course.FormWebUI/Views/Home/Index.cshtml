@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}


<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Is Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">1</th>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.IsApproved</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">
                        Update
                    </a>
                </td>
            </tr>

        }
       
       
    </tbody>
</table>

<a class="btn btn-danger" asp-controller="Home" asp-action="Create">
    Create
</a>